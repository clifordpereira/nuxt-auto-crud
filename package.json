{
  "name": "nuxt-auto-crud",
  "version": "2.0.0",
  "description": "Dynamic RESTful CRUD APIs for Nuxt without code generation, fully schema-driven.",
  "author": "Cliford Pereira",
  "license": "MIT",
  "keywords": [
    "nuxt",
    "nuxt-module",
    "crud",
    "auto-crud"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/clifordpereira/nuxt-auto-crud"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "files": [
    "dist",
    "src/runtime"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "release": "bun run lint && bun run test && bun run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "test:e2e": "bun run build:stub && vitest run",
    "build:stub": "nuxt-module-build build --stub",
    "dev": "bun run build:stub && nuxi prepare playground && nuxi dev --bun playground",
    "dev:build": "nuxi build --bun playground",
    "dev:saas": "bun run build:stub && nuxi prepare playground-saas && nuxi dev --bun playground-saas",
    "saas:build": "nuxi build --bun playground-saas",
    "postinstall": "nuxi prepare"
  },
  "dependencies": {
    "@nuxt/kit": "^4.3.1",
    "drizzle-zod": "^0.8.3",
    "zod": "^4.3.6",
    "pluralize": "^8.0.0"
  },
  "peerDependencies": {
    "@libsql/client": "^0.17.0",
    "@nuxthub/core": "^0.10.6",
    "drizzle-kit": ">=1.0.0-beta.15 <2",
    "drizzle-orm": ">=1.0.0-beta.15 <2",
    "nuxt": "^4.3.0"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/lucide": "^1.2.91",
    "@iconify-json/simple-icons": "^1.2.71",
    "@iconify-json/vscode-icons": "^1.2.43",
    "@libsql/client": "^0.17.0",
    "@nuxt/devtools": "^3.2.1",
    "@nuxt/eslint-config": "^1.15.1",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.3.1",
    "@nuxt/test-utils": "^4.0.0",
    "@nuxthub/core": "^0.10.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "latest",
    "@vue/test-utils": "^2.4.6",
    "@types/pluralize": "^0.0.33",
    "better-sqlite3": "^12.6.2",
    "changelogen": "^0.6.2",
    "drizzle-kit": "^1.0.0-beta.9-e89174b",
    "drizzle-orm": "^1.0.0-beta.9-e89174b",
    "eslint": "^10.0.0",
    "happy-dom": "^20.6.2",
    "nuxt": "^4.3.1",
    "playwright-core": "^1.58.2",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4",
    "wrangler": "^4.66.0"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  }
}
